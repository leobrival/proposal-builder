TZ=UTC
PORT=3333
HOST=localhost
LOG_LEVEL=info
APP_KEY=
NODE_ENV=development
SESSION_DRIVER=cookie

# PostgreSQL (Neon)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root
DB_DATABASE=app
DB_SSL=false

# Upstash Redis (Cache)
# Get credentials from: https://console.upstash.com/redis
REDIS_HOST=your-redis-host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# PostHog Analytics (Optional)
# Get credentials from: https://eu.posthog.com/settings/project
POSTHOG_API_KEY=phx_your_api_key
POSTHOG_PROJECT_ID=your_project_id
POSTHOG_HOST=https://eu.posthog.com

# Payment Provider Configuration
# Options: lemonsqueezy (default) or stripe
PAYMENT_PROVIDER=lemonsqueezy

# Lemon Squeezy (Primary - recommended for indie developers)
# Get credentials from: https://app.lemonsqueezy.com/settings/api
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key
LEMONSQUEEZY_STORE_ID=your_store_id
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_signing_secret

# Stripe (Alternative)
# Get credentials from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Provider Configuration
# Options: resend (default) or smtp
EMAIL_PROVIDER=resend
EMAIL_FROM=Spons Easy <noreply@sponseasy.com>

# Resend (Primary - recommended for transactional emails)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key

# SMTP (Alternative - for self-hosted or other providers)
# Use for providers like Mailgun SMTP, SendGrid SMTP, or self-hosted
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# MCP (Model Context Protocol) Configuration
# Public URL for the API (used in MCP client)
APP_URL=http://localhost:3333

# NPM Registry (for private packages)
# Get token from: npm token create --read-only
NPM_TOKEN=npm_your_npm_token

# Anthropic API (for internal AI assistant)
# Get API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key
